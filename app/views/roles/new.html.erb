<h1>New role</h1>

<%= simple_form_for(@role,url: organization_roles_path(@organization)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name, collection: @organization.roles.sort, :include_blank=>false%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>

<%= link_to 'Back', organization_roles_path(@organization) %>
