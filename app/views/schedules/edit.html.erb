<div class="row">
  <div class="nine columns">
    <h1>Editing schedule</h1>

  <%= simple_form_for([@organization,@schedule],url: organization_schedule_url(@organization,@schedule)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :start_time, input_html: {:type=>:datetime}, placeholder: "YYYY-MM-DD HH:MM:SS GMT+X:XX", hint: "You can specify your time zone here. Format YYYY-MM-DD HH:MM:SS GMT+X:XX" %>
      <%= f.input :available_for, :label=> "Hours Available" %>
    </div>

    <div class="form-actions">
      <%= f.button :submit %>
    </div>
  <% end %>

    <%= link_to 'Back', organization_calendar_path(@organization) %>
  </div>
</div>
