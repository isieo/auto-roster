<div class="row">
  <div class="nine columns">
    <h1>Listing organizations</h1>

    <table class="seven">
      <tr>
        <th>Name</th>
        <th></th>
        <th></th>
        <th></th>
      </tr>

    <% @organizations.each do |organization| %>
      <tr>
        <td><%= organization.name %></td>
        <td><%= link_to 'View Calendar', organization %></td>
        <%if organization.admins.include?(current_user.id)%>
          <td><%= link_to 'Edit', edit_organization_path(organization) %></td>
        <%end%>
        <td><%= link_to 'Edit My Roles', organization_roles_path(organization) %></td>
      </tr>
    <% end %>
    </table>

    <br />

    <%#= link_to 'New Organization', new_organization_path %>

  </div>
</div>
